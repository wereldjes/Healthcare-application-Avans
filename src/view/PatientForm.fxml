    <top>
        <HBox id="navbar" BorderPane.alignment="TOP_CENTER" >
            <children>
                <Label fx:id="doctorName" />
                <Region HBox.hgrow="ALWAYS" />
                <Region id="test"/>
                <Button fx:id="previousPage"  text="Terug naar Overview" />
            </children>
        </HBox>
    </top>

    <center>
        <HBox alignment="TOP_CENTER">
